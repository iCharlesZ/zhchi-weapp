/**index.wxss**/
.main {
	background-color: #F2f2f2;
}
.swiper {
  height: 400rpx;
  width: 100%;
  margin-top: 100rpx;
}
.swiper image {
  height: 100%;
  width: 100%;
}

.search-view {
  position:fixed;
  left:0;
  right:0;
  top:0;
  z-index:500;
  width: 100%;
  height: 100rpx;
  background: #666;
  display: flex;
  flex-direction: column;
}
.search-content{
   background: white;
   width: 90%;
   display: flex;
   flex-direction: row;
   align-items: center;
   padding-top: auto;
   padding-left: 20rpx;
   padding-bottom: auto;
   margin: auto;
   height: 70rpx;
   border-radius:5px 5px;
}
.search-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.search-input{
  width: 500rpx;
  font-size: 28rpx;
}
.search-btn{
  width: 150rpx;
  height: 70rpx;
  margin-right: 0rpx;
  background-color:blueviolet;
  font-size: 28rpx;
  align-items: center;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color:#fff;
  border:none;
  position: relative;
}
.hotIcon {
	width: 100%;
	height: 80rpx;
	margin-top: 30rpx;
	background-color: #fff;
	padding: 20rpx 0;
	margin: 0 0 30rpx 0;
}
.icon {
	width: 25%;
	float: left;
	text-align: center;
}
.icon image {
	width: 50rpx;
	height: 50rpx;
	margin: 0 auto;
	display: block;
}
.icon text {
	display: block;
	font-size: 22rpx;
}

.newest {
	background-color: #fff;
}
.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #666;
    text-align: center;
}
.newest-title text {
	font-size: 33rpx;
}
.newest-box{
    padding:0;
}
.newest-box .newest-list{
    display: block;
    width: 46%;
    height: 260rpx;
	float: left;
	margin: 2% 1% 2% 3%;
}
.newest-box .newest-list:nth-child(2n){
    margin: 2% 3% 2% 1%;
}
.newest-box .newest-list image{
    width: 100%;
    height: 175rpx;
    /* margin: 20rpx 0 10rpx; */
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
}
.newest-box .newest-list .newest-text2 {
	font-size: 22rpx;
	color: #666;
}