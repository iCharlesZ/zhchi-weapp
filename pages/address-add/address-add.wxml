	<form bindsubmit="bindSave">
		<view class="form-box">
			<view class="row-wrap">
				<view class="label">姓名</view>
				<view class="label-right">
					<input class="input" type="text" placeholder="姓名" value=""/>
				</view>
			</view>
			<view class="row-wrap">
				<view class="label">手机号码</view>
				<view class="label-right">
					<input class="input" type="text" placeholder="手机号码" value=""/>
